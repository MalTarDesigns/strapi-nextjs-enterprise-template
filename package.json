{
  "name": "maltar-designs-strapi-next-template",
  "version": "3.0.0",
  "private": true,
  "description": "Advanced Strapi v5 & Next.js v15 template enhanced by MalTar Designs with enterprise features",
  "author": {
    "name": "MalTar Designs",
    "email": "contact@maltardesigns.com",
    "url": "https://github.com/MalTarDesigns"
  },
  "contributors": [
    {
      "name": "Notum Technologies",
      "email": "info@notum.cz",
      "url": "https://notum.cz"
    }
  ],
  "maintainers": [
    {
      "name": "MalTar Designs",
      "email": "contact@maltardesigns.com",
      "url": "https://github.com/MalTarDesigns"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MalTarDesigns/strapi-next-monorepo-starter.git"
  },
  "homepage": "https://github.com/MalTarDesigns/strapi-next-monorepo-starter",
  "bugs": {
    "url": "https://github.com/MalTarDesigns/strapi-next-monorepo-starter/issues"
  },
  "keywords": [
    "strapi",
    "nextjs",
    "monorepo",
    "typescript",
    "template",
    "cms",
    "maltar-designs",
    "enterprise",
    "production-ready"
  ],
  "scripts": {
    "build": "turbo build --cache-dir=.turbo",
    "build:strapi": "turbo run build --filter=@repo/strapi",
    "build:web": "turbo run build --filter=@repo/web",
    "commit": "git-cz",
    "dev": "turbo dev",
    "dev:strapi": "turbo run dev --filter=@repo/strapi",
    "dev:web": "turbo run dev --filter=@repo/web",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:db": "docker compose up -d db",
    "docker:build": "docker compose build",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "format": "prettier --write --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "format:check": "prettier --check --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "heroku-postbuild": "bash ./scripts/heroku/heroku-postbuild.sh",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo test:e2e",
    "test:all": "turbo test && turbo test:e2e",
    "prepare": "husky",
    "start:strapi": "turbo run start --filter=@repo/strapi",
    "start:web": "turbo run start --filter=@repo/web",
    "setup:apps": "find . -name '*.example' -exec sh -c 'cp \"$1\" \"${1%.example}\"' _ {} \\;",
    "deploy": "node scripts/deploy/deploy-full-stack.js",
    "deploy:preview": "node scripts/deploy/deploy-full-stack.js --preview",
    "deploy:strapi": "node scripts/deploy/deploy-strapi.js",
    "deploy:vercel": "node scripts/deploy/deploy-vercel.js",
    "deploy:parallel": "node scripts/deploy/deploy-full-stack.js --parallel",
    "setup:production": "node scripts/setup-production-env.js"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "turbo": "^2.0.9"
  },
  "packageManager": "pnpm@9.15.2",
  "pnpm": {
    "overrides": {
      "sharp": "0.33.5"
    }
  },
  "engines": {
    "node": "22.x.x",
    "pnpm": ">=9"
  },
  "comments": {
    "prettier": "bump to 3.3.3 destroys types schemas generated by Strapi (@strapi/typescript-utils > generators > utils > prettier.format())"
  }
}
