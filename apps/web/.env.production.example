# Production Environment Configuration for Next.js Web App
# Copy this file to .env.production for production deployment
# 
# IMPORTANT: Do not leave empty values like `VARIABLE=`, as they are interpreted as empty strings.
# If you want to use default values, remove or comment the line completely.

# ========================== Next.js Production Settings ==========================

# Build output type for production deployment
# - "standalone" - for Docker containers and server environments
# - "export" - for static site generation (CDN deployment)
# - undefined - default server-side rendering
NEXT_OUTPUT=standalone

# Production revalidation settings (false | 0 | number in seconds)
# Set to a number for ISR, or false for no revalidation
NEXT_PUBLIC_REVALIDATE=3600

# Enable filesystem cache for better performance
WEBPACK_CACHE_TYPE=filesystem

# ========================== Authentication Settings ==========================

# Production canonical URL - MUST match your domain
NEXTAUTH_URL=https://your-domain.com

# Strong JWT secret for production - GENERATE NEW SECRET
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=REPLACE_WITH_STRONG_SECRET_IN_PRODUCTION

# ========================== Strapi Backend Connection ==========================

# Production Strapi URL - your Strapi Cloud or custom deployment
STRAPI_URL=https://your-strapi-instance.strapiapp.com

# Read-only API key for content fetching
# Generate in Strapi Admin > Settings > API Tokens
STRAPI_REST_READONLY_API_KEY=your_readonly_api_key_here

# Custom API key with specific permissions
# Generate in Strapi Admin > Settings > API Tokens
STRAPI_REST_CUSTOM_API_KEY=your_custom_api_key_here

# ========================== Application URLs ==========================

# Production domain URL - used for sitemap, canonical URLs, etc.
APP_PUBLIC_URL=https://your-domain.com

# Base URL for frontend (used by Strapi for redirects, webhooks)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# ========================== Error Monitoring (Sentry) ==========================

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry authentication token for source map uploads
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Sentry organization slug
SENTRY_ORG=your-sentry-org

# Sentry project slug
SENTRY_PROJECT=your-sentry-project

# Suppress Sentry warnings in production
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1

# ========================== Security & Protection ==========================

# ReCAPTCHA v3 for form protection
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# ========================== Content Management ==========================

# Preview mode shared secret (must match Strapi config)
# Generate strong secret: openssl rand -hex 32
STRAPI_PREVIEW_SECRET=your_strong_preview_secret_here

# ISR revalidation webhook secret (must match Strapi config)
# Generate strong secret: openssl rand -hex 32
REVALIDATE_SECRET=your_strong_revalidation_secret_here

# ========================== Performance & Caching ==========================

# CDN URL if using external CDN (optional)
# CDN_URL=https://cdn.your-domain.com

# Enable optimized image loading
NEXT_PUBLIC_OPTIMIZE_IMAGES=true

# ========================== Analytics & Tracking ==========================

# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager Container ID  
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ========================== Feature Flags ==========================

# Disable unused function warnings in production
NEXT_PUBLIC_PREVENT_UNUSED_FUNCTIONS_ERROR_LOGS=true

# Enable maintenance mode (redirects all traffic to maintenance page)
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# ========================== Database & External Services ==========================

# External API endpoints
# EXTERNAL_API_URL=https://api.external-service.com
# EXTERNAL_API_KEY=your_external_api_key_here

# ========================== Environment Identification ==========================

# Environment identifier for monitoring and debugging
NODE_ENV=production
VERCEL_ENV=production

# ========================== Deployment Information ==========================
# These are typically set automatically by Vercel, but can be overridden

# VERCEL=1
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_GIT_COMMIT_SHA=commit_hash_here
# VERCEL_GIT_COMMIT_REF=main

# ========================== Additional Security Headers ==========================

# Content Security Policy (optional - can be configured in next.config.mjs instead)
# CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval';"

# ========================== Logging & Debugging ==========================

# Log level for production (error | warn | info | debug)
LOG_LEVEL=warn

# Enable request logging in production (true/false)
ENABLE_REQUEST_LOGGING=false