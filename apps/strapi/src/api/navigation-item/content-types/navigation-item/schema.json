{
  "kind": "collectionType",
  "collectionName": "navigation_items",
  "info": {
    "singularName": "navigation-item",
    "pluralName": "navigation-items",
    "displayName": "Navigation Item",
    "description": "Menu navigation items with hierarchical structure"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "url": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::navigation-item.navigation-item",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::navigation-item.navigation-item",
      "mappedBy": "parent"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site"
    }
  }
}